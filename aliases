alias ..='cd ..'

# ls
alias a='ls -lrthG'
alias l="ls -lAh"
alias la='ls -A'
alias lh="ls -lh"
alias ls='ls -G'
alias ll='ls -lG'

# git
alias gb='git branch'
alias gc='git commit'
alias gcs='git commit -S'
alias gca='git commit -a'
alias gco='git checkout'
alias gl='git pull'
alias glr='git pull --rebase'
alias gp='git push'
alias gwc='git whatchanged -p --abbrev-commit --pretty=medium'
alias grc='git rebase --continue'
alias grs='git rebase --skip'
alias fb='gb -a | grep -i $1'
alias gst='git status'

alias gco-fzf='gco $(git tag | fzf)'
alias gcb='gco $(gb | fzf)'
alias gpf="git push --force-with-lease"

#rails
alias devlog='tail -f log/development.log'
alias migrate="rake db:migrate db:rollback && rake db:migrate"

#directory navigation
alias dot='cd ~/dotfiles'
alias p='cd ~/projects'
alias pl='cd ~/playground'

alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'

#tmux
alias tma='tmux attach'

#wifi
alias wion='networksetup -setairportpower en0 off; networksetup -setairportpower en0 on'
alias wioff='networksetup -setairportpower en0 off'

#shows lines of code for coding files
alias locate_rb="find . -name '*.rb' | xargs wc -l"
alias locate_py="find . -name '*.py' | xargs wc -l"

#move to django builtin templates
alias djdocs="cd ~/.pyenv/versions/3.6.1/lib/python3.6/site-packages/django/contrib/admin/templates/registration"
alias minpacp="cd ~/.vim/pack/minpac/start"


#move to administration directory on iCloud Drive
alias am="cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/Muliphen/"

alias cat="bat"
